<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".subtopiclist">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:weightSum="1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">


        <TextView
            android:id="@+id/textView2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/muli_extrabold"
            android:background="@color/lightgreen"
            android:padding="5dp"

            android:text="Statistics"
            android:textAlignment="center"
            android:textAllCaps="true"
            android:textColor="@color/black"
            android:textSize="@dimen/_24font_mdp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="@id/profile_image"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/profile_image" />

        <HorizontalScrollView
            android:id="@+id/horizontal_scroll"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_400mdp"
            android:layout_weight="0.5"
            android:background="@drawable/gradient_top">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/muli_extrabold"
                            android:text="Let's start statistics"
                            android:textColor="@color/white"
                            android:textSize="25dp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="40dp"
                            android:fontFamily="@font/muli_extrabold"
                            android:text="Get Ready !!"
                            android:textColor="@color/white"
                            android:textSize="15dp" />
                    </LinearLayout>
                </LinearLayout>

                <ImageView

                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:src="@drawable/trend" />

            </LinearLayout>


        </HorizontalScrollView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.05">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/muli_extrabold"
                android:paddingLeft="30dp"
                android:text="Topics"
                android:textColor="@color/black"

                android:textSize="25dp"
                android:textStyle="bold" />
        </LinearLayout>


        <ScrollView
            android:id="@+id/vertical_scroll"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0.5">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <RelativeLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:paddingLeft="25dp"
                            android:paddingTop="15dp"
                            android:paddingRight="25dp"
                            android:paddingBottom="25dp">

                            <androidx.cardview.widget.CardView
                                android:id="@+id/html_card"
                                android:layout_width="200dp"
                                android:layout_height="150dp"
                                app:cardBackgroundColor="@color/subtopicgreen"
                                app:cardCornerRadius="30dp"
                                app:cardElevation="50dp">

                                <ImageView
                                    android:id= "@+id/mean"
                                    android:layout_width="200dp"
                                    android:layout_height="100dp"
                                    android:layout_gravity="center"
                                    android:src="@drawable/analytics" />

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="bottom"
                                    android:background="@color/white"
                                    android:fontFamily="sans-serif-condensed-medium"
                                    android:gravity="center"

                                    android:text="Mean Median Mode"
                                    android:textColor="@color/black"
                                    android:textSize="20dp"
                                    android:textStyle="bold" />
                            </androidx.cardview.widget.CardView>

                            <ImageView
                                android:layout_width="100dp"
                                android:layout_height="20dp"
                                android:layout_alignParentRight="true"
                                android:layout_marginTop="75dp"
                                android:layout_marginRight="60dp"
                                android:background="@drawable/dotted"
                                android:backgroundTint="@color/black" />

                            <ImageView
                                android:layout_width="300dp"
                                android:layout_height="300dp"
                                android:layout_alignParentRight="true"
                                android:layout_marginTop="85dp"

                                android:layout_marginRight="-100dp"
                                android:background="@drawable/dotted_vertical"
                                android:backgroundTint="@color/black" />

                            <androidx.cardview.widget.CardView
                                android:id="@+id/css_card"
                                android:layout_width="200dp"
                                android:layout_height="150dp"
                                android:layout_alignParentEnd="true"
                                android:layout_marginTop="300dp"
                                app:cardBackgroundColor="@color/subtopicgreen"
                                app:cardCornerRadius="30dp"
                                app:cardElevation="50dp"

                                >

                                <ImageView
                                    android:layout_width="200dp"
                                    android:layout_height="100dp"
                                    android:layout_gravity="center"
                                    android:src="@drawable/linegraph" />

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="bottom"
                                    android:background="@color/white"

                                    android:fontFamily="sans-serif-condensed-medium"
                                    android:gravity="center"
                                    android:text="Standard Deviation"

                                    android:textColor="@color/black"
                                    android:textSize="20dp"
                                    android:textStyle="bold" />
                            </androidx.cardview.widget.CardView>


                            <ImageView
                                android:layout_width="200dp"
                                android:layout_height="100dp"
                                android:layout_gravity="center"
                                android:src="@drawable/linearregression" />

                            <ImageView
                                android:layout_width="100dp"
                                android:layout_height="20dp"
                                android:layout_alignParentLeft="true"
                                android:layout_marginLeft="60dp"

                                android:layout_marginTop="325dp"

                                android:background="@drawable/dotted" />

                            <ImageView
                                android:layout_width="300dp"
                                android:layout_height="300dp"

                                android:layout_alignParentLeft="true"
                                android:layout_marginLeft="-78dp"

                                android:layout_marginTop="330dp"
                                android:background="@drawable/dotted_vertical"
                                android:backgroundTint="@color/black" />
                        </RelativeLayout>


                        <RelativeLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:paddingLeft="25dp"
                            android:paddingTop="0dp"
                            android:paddingRight="25dp"
                            android:paddingBottom="25dp">

                            <androidx.cardview.widget.CardView
                                android:id="@+id/css_advanced"
                                android:layout_width="200dp"
                                android:layout_height="150dp"
                                android:layout_alignParentLeft="true"
                                android:layout_marginTop="0dp"
                                app:cardBackgroundColor="@color/subtopicgreen"
                                app:cardCornerRadius="30dp"
                                app:cardElevation="50dp">

                                <ImageView
                                    android:layout_width="200dp"
                                    android:layout_height="100dp"
                                    android:layout_gravity="center"
                                    android:src="@drawable/graphchart" />

                                <TextView
                                    android:layout_width="match_parent"

                                    android:layout_height="wrap_content"
                                    android:layout_gravity="bottom"
                                    android:background="@color/white"
                                    android:fontFamily="sans-serif-condensed-medium"
                                    android:gravity="center"
                                    android:text="Karl pearson"
                                    android:textColor="@color/black"
                                    android:textSize="20dp"
                                    android:textStyle="bold" />
                            </androidx.cardview.widget.CardView>


                            <ImageView
                                android:layout_width="100dp"
                                android:layout_height="20dp"
                                android:layout_alignParentRight="true"
                                android:layout_marginTop="75dp"
                                android:layout_marginRight="70dp"
                                android:background="@drawable/dotted"
                                android:backgroundTint="@color/black" />

                            <ImageView
                                android:layout_width="420dp"
                                android:layout_height="420dp"
                                android:layout_alignParentRight="true"
                                android:layout_marginTop="85dp"

                                android:layout_marginRight="-140dp"
                                android:background="@drawable/dotted_vertical"
                                android:backgroundTint="@color/black" />


                            <androidx.cardview.widget.CardView
                                android:id="@+id/javascript_card"
                                android:layout_width="200dp"
                                android:layout_height="150dp"
                                android:layout_alignParentEnd="true"
                                android:layout_marginTop="450dp"
                                app:cardBackgroundColor="@color/subtopicgreen"
                                app:cardCornerRadius="30dp"

                                app:cardElevation="50dp"

                                >

                                <ImageView
                                    android:layout_width="200dp"
                                    android:layout_height="100dp"
                                    android:layout_gravity="center"
                                    android:src="@drawable/statisticscoyimg" />

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="bottom"
                                    android:background="@color/white"
                                    android:fontFamily="sans-serif-condensed-medium"

                                    android:gravity="center"
                                    android:text="Random variables"
                                    android:textColor="@color/black"
                                    android:textSize="20dp"
                                    android:textStyle="bold" />
                            </androidx.cardview.widget.CardView>


                            <ImageView
                                android:layout_width="100dp"
                                android:layout_height="20dp"
                                android:layout_alignParentLeft="true"
                                android:layout_marginLeft="60dp"

                                android:layout_marginTop="500dp"

                                android:background="@drawable/dotted" />

                            <ImageView
                                android:layout_width="300dp"
                                android:layout_height="300dp"

                                android:layout_alignParentLeft="true"
                                android:layout_marginLeft="-100dp"

                                android:layout_marginTop="510dp"
                                android:background="@drawable/dotted_vertical"
                                android:backgroundTint="@color/black" />


                        </RelativeLayout>


                        <RelativeLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:paddingLeft="25dp"
                            android:paddingTop="0dp"
                            android:paddingRight="25dp"
                            android:paddingBottom="25dp">

                            <androidx.cardview.widget.CardView
                                android:id="@+id/javascript_advanced"
                                android:layout_width="200dp"
                                android:layout_height="150dp"
                                android:layout_alignParentLeft="true"
                                android:layout_marginTop="0dp"
                                app:cardBackgroundColor="@color/subtopicgreen"
                                app:cardCornerRadius="30dp"
                                app:cardElevation="50dp">

                                <ImageView
                                    android:layout_width="200dp"
                                    android:layout_height="100dp"
                                    android:layout_gravity="center"
                                    android:src="@drawable/analytics" />

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="bottom"
                                    android:background="@color/white"
                                    android:fontFamily="sans-serif-condensed-medium"
                                    android:gravity="center"

                                    android:text="Normal distribution"
                                    android:textColor="@color/black"

                                    android:textSize="20dp"
                                    android:textStyle="bold" />

                            </androidx.cardview.widget.CardView>


                            <ImageView
                                android:layout_width="100dp"
                                android:layout_height="20dp"
                                android:layout_alignParentRight="true"
                                android:layout_marginTop="75dp"
                                android:layout_marginRight="60dp"
                                android:background="@drawable/dotted"
                                android:backgroundTint="@color/black" />

                            <ImageView
                                android:layout_width="300dp"
                                android:layout_height="300dp"
                                android:layout_alignParentRight="true"
                                android:layout_marginTop="85dp"

                                android:layout_marginRight="-100dp"
                                android:background="@drawable/dotted_vertical"
                                android:backgroundTint="@color/black" />


                            <androidx.cardview.widget.CardView
                                android:id="@+id/project_card"
                                android:layout_width="200dp"
                                android:layout_height="150dp"
                                android:layout_alignParentRight="true"
                                android:layout_marginTop="450dp"
                                app:cardBackgroundColor="@color/subtopicgreen"
                                app:cardCornerRadius="30dp"

                                app:cardElevation="50dp"

                                >

                                <ImageView
                                    android:layout_width="100dp"
                                    android:layout_height="75dp"
                                    android:layout_gravity="center"
                                    android:src="@drawable/linearregression" />

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="bottom"

                                    android:background="@color/white"
                                    android:fontFamily="sans-serif-condensed-medium"

                                    android:gravity="center"
                                    android:text="Cumumlative disribution"
                                    android:textColor="@color/black"
                                    android:textSize="20dp"
                                    android:textStyle="bold" />
                            </androidx.cardview.widget.CardView>

                            <ImageView
                                android:layout_width="100dp"
                                android:layout_height="20dp"
                                android:layout_alignParentLeft="true"
                                android:layout_marginLeft="60dp"

                                android:layout_marginTop="500dp"

                                android:background="@drawable/dotted" />

                            <ImageView
                                android:layout_width="300dp"
                                android:layout_height="300dp"

                                android:layout_alignParentLeft="true"
                                android:layout_marginLeft="-100dp"

                                android:layout_marginTop="510dp"
                                android:background="@drawable/dotted_vertical"
                                android:backgroundTint="@color/black" />

                        </RelativeLayout>


                        <RelativeLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:paddingLeft="25dp"
                            android:paddingTop="0dp"
                            android:paddingRight="25dp"
                            android:paddingBottom="25dp">

                            <androidx.cardview.widget.CardView
                                android:id="@+id/php_card"
                                android:layout_width="200dp"
                                android:layout_height="150dp"

                                android:layout_alignParentLeft="true"
                                app:cardBackgroundColor="@color/subtopicgreen"
                                app:cardCornerRadius="30dp"

                                app:cardElevation="50dp">

                                <ImageView
                                    android:layout_width="200dp"
                                    android:layout_height="100dp"
                                    android:layout_gravity="center"
                                    android:src="@drawable/statisticscoyimg" />

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="bottom"
                                    android:background="@color/white"
                                    android:fontFamily="sans-serif-condensed-medium"
                                    android:gravity="center"

                                    android:text="Variance"
                                    android:textColor="@color/black"

                                    android:textSize="20sp"
                                    android:textStyle="bold" />
                            </androidx.cardview.widget.CardView>


                        </RelativeLayout>
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
        </ScrollView>

    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>